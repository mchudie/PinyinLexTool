  <ItemGroup>
    <ProjectReference Include="..\PinyinLexTool\PinyinLexTool.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Resources\app.ico" />
  </ItemGroup>

</Project>
